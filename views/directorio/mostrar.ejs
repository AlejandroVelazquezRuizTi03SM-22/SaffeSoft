<%- include("../templates/encabezado.ejs")%>
<%- include("../templates/menu.ejs")%>
<div class="container">
    <div class="card mt-5">
        <div class="card-header">
            <h1>Directorio</h1>
        </div>
    
        <div class="card-body"></div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre</th>
                    <th>Descripcion</th>
                    <th>Altitud</th>
                    <th>Latitud</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                <%
                dir.forEach((direccion, i) => {
                %>
                    <tr>
                        <td><%= (i+1)*1 %></td>
                        <td><%= direccion.nombre %></td>
                        <td><%= direccion.descripcion %></td>
                        <td><%= direccion.altitud %></td>
                        <td><%= direccion.latitud %></td>
                        <td>
                            <a href="/editarDireccion/<%= direccion.id %>">Editar</a>
                            <a href="/borrarDireccion/<%= direccion.id %>">Eliminar</a>
                        </td>
                    </tr>
                <%
                });
                %>
            </tbody>
        </table>
        
        <div class="card-footer"></div>
    </div>
</div>
<%- include("../templates/pie.ejs")%>
